    <div class="row">
        <div class="container">

            <!-- Add Visitor Modal -->
            <div class="modal fade" id="visitor_modal" role="dialog" data-backdrop="static">
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div id="main-modal-header" class="modal-header" style="padding:35px 50px;">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="global_modal_header">Add Visitor</h4>
                        </div>
                        <!-- Modal Content -->
                        <div class="modal-body" style="padding:40px 50px;">
                            <form id="add_visitor_form" action="/Home/AddVisitor" method="post" role="form">
                                <!-- Returning/New visitor toggle buttons. -->
                                <div class="btn-group btn-group-justified" role="group" aria-label="...">
                                    <div class="btn-group" role="group">
                                        <button type="button" id="new_visitor_button" class="btn btn-default"><b>New Visitor</b></button>
                                    </div>
                                    <div class="btn-group" role="group">
                                        <button type="button" id="returning_visitor_button" class="btn btn-default">Returning Visitor</button>
                                    </div>    
                                </div> 
                                <br />        
                                <div class="form-group container-fluid">
                                    <div class="ui-widget">

                                        <!-- New visitor -->
                                        <!----------------------------------------------------------------------------------------------->
                                        <div id="new_visitor_control_cluster">
                                            <label for="visitor_firstname">First Name</label>
                                            <!--firstName-->
                                            <input class="form-control" type="text" id="visitor_firstname" name="firstName" required />
                                            <br />
                                            <label for="visitor_lastname">Last Name</label>
                                            <!--lastName-->
                                            <input class="form-control" type="text" id="visitor_lastname" name="lastName" required />
                                        </div>
                                        <!----------------------------------------------------------------------------------------------->

                                        <!-- Returning visitor -->
                                        <!----------------------------------------------------------------------------------------------->
                                        <div id="returning_visitor_control_cluster" hidden>
                                            <label for="returning_visitor_autocomplete">Your Name</label>
                                            <div class="row">
                                                <div class="col-xs-8">
                                                    <input class="form-control" id="returning_visitor_autocomplete" autocomplete="off" placeholder="First or Last name..." required />
                                                    <!--returning visitor ID-->
                                                    <input type="hidden" id="returning_visitor_ID" name="existingVisitorUserID" />
                                                </div>
                                                <div class="col-xs-4">
                                                    <p id="returning_visitor_ID_display"><small>Not yet selected</small></p>
                                                </div>
                                            </div>
                                        </div>
                                        <!----------------------------------------------------------------------------------------------->

                                        <br />
                                        <label for="visiting_user_autocomplete">Who're you visiting?</label>
                                        <div class="row">
                                            <div class="col-xs-8">
                                                <input class="form-control" id="visiting_user_autocomplete" placeholder="First or Last name..." required />
                                                <!--userBeingVisitedID-->
                                                <input type="hidden" id="user_being_visited_ID" name="userBeingVisitedID" />
                                            </div>
                                            <div class="col-xs-4">
                                                <p id="user_being_visited_ID_display"><small>Not yet selected</small></p>
                                            </div>    
                                        </div>
                                        <br />
                                        <label for="visitor_company">Your company</label>
                                        <!--company-->
                                        <input class="form-control" type="text" id="visitor_company" name="company" />
                                        <br />
                                        <label for="visitor_depart_time">When will you be leaving us?</label>
                                        <div class="row">
                                            <!-- Visitor datepicker goes here. -->
                                            <div class="col-xs-1">
                                                <p><font size="6"><span class="glyphicon glyphicon-calendar"></span></font></p>
                                            </div>
                                            <div class="col-xs-11">
                                                <input type="text" class="form-control" placeholder="Date (click here...)" id="visitor_datepicker" name="returnDate" />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-1">
                                                <p><font size="6"><span class="glyphicon glyphicon-time"></span></font></p>
                                            </div>
                                            <div class="col-xs-11">
                                                <input class="form-control" type="text" placeholder="Time (click here...)" id="visitor_timepicker" autocomplete="off" name="returnTime" />
                                            </div>
                                        </div>
                                        <br />
                                        <!-- intendedDepartTime -->
                                        <input type="hidden" id="intendedDepartTime" name="intendedDepartTime" value="0" />
                                        <button id="save_new_visitor" type="submit" class="btn btn-info btn-block"><span class="glyphicon glyphicon-floppy-disk"></span> Save</button>
                                    </div>  
                                </div>
                            </form>
                        </div>
                        <!-- Modal Footer -->
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>