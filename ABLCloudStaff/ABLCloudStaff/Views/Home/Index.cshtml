@model List<ABLCloudStaff.Models.Core>

@{
    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="../../Scripts/less.js"></script>
    <script src="../../Scripts/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="../../Content/jquery-ui.min.css" />
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="../../Content/bootstrap-switch.css">
    <script src="../../Scripts/bootstrap-switch.min.js"></script>
    <script src="../../Scripts/swipe_to_change_status.js"></script>
    <script src="../../Scripts/init_modal.js"></script>
    <script src="../../Scripts/mobile-range-slider.js"></script>
    <script src="../../Scripts/datetime_selection.js"></script>
    <script src="../../Scripts/link_modifier.js"></script>
    <link rel="stylesheet" href="../../Content/Site.css">
    <link rel="stylesheet" href="../../Content/mobile-range-slider.css" />

    <!-- favicon from AbacusBio website -->
    <link rel="apple-touch-icon" sizes="144x144" href="http://www.abacusbio.com/themes/abacusbio/assets/images/apple-touch-144x144-icon.png" />
    <link rel="apple-touch-icon" sizes="114x114" href="http://www.abacusbio.com/themes/abacusbio/assets/images/apple-touch-114x114-icon.png" />
    <link rel="apple-touch-icon" sizes="72x72" href="http://www.abacusbio.com/themes/abacusbio/assets/images/apple-touch-72x72-icon.png" />
    <link rel="apple-touch-icon" href="http://www.abacusbio.com/themes/abacusbio/assets/images/apple-touch-57x57-icon.png" />
    <link rel="shortcut icon" href="http://www.abacusbio.com/themes/abacusbio/favicon.ico" type="image/x-icon" />
    
    <title>CloudStaff</title>

    <script type="text/javascript">
        less.watch();

        $(document).ready(function () {

            // Init toggle switches
            $("[name='staff-state']").bootstrapSwitch();

            // Prevent auto complete for form fields on this page.
            $("form :input").attr("autocomplete", "off");

        });
        
        // Refresh page every 300 seconds, providing the modal isn't visible
        setInterval(function () {
                window.location.href = '/Home/Index';
        }, 300000);

    </script>

</head>
<body>
    <!-- Navigation Bar-->
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
                <div id="cloudstaff_title">
                    <a href="/Home/Index" class="navbar-brand" id="redundant_link">
                        <span>
                            <img id="title_image" src="http://www.abacusbio.com/themes/abacusbio/assets/images/apple-touch-57x57-icon.png" width="25" height="25" />
                        </span>
                        CloudStaff
                    </a>
                </div>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Status Board", "Index", "Home")</li>
                    <li><a href="/Admin/Admin">Administration <span class="glyphicon glyphicon-log-in"></span></a></li>
                    <li><a href="http://goo.gl/forms/u1cbZStRaA" target="_blank">Submit Feedback <span class="glyphicon glyphicon-list-alt"></span></a></li>
                </ul>
            </div>
        </div>
    </div>

    <br />

    <div class="container-fluid">
        <div class="row">

            <!-- We require a variable to uniquely identify each module (UserID) -->

            @foreach(var core in @Model)
            {
                <div class="col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-0 col-md-3 col-md-offset-0 col-lg-2 col-lg-offset-0">
                    <div class="container-fluid">
                        <!-- When clicked, this is the invoker. -->
                        <div class="panel-group top-half-of-panel">

                            <div class="panel-default panel staff-modules-panels">
                                <div id="@core.UserID" class="panel-heading staff-name staff-modules">

                                    <!-- Useful fields for initialising the change modal -->
                                    <input type="hidden" class="thisUsersStatusID" value="@core.StatusID" />
                                    <input type="hidden" class="thisUsersLocationID" value="@core.LocationID" />

                                    <div class="row">
                                        <div class="col-xs-12">
                                            <p class="staff-name-text">
                                                <b>@core.User.FirstName @core.User.LastName</b>
                                            </p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <p>
                                                <small class="status_location_details">
                                                    @core.Status.Name
                                                    <br />
                                                    @if (core.LocationID != 1)
                                                    {
                                                        @core.Location.Name
                                                    }
                                                    else
                                                    {
                                                        <br />
                                                    }
                                                </small>
                                            </p>
                                        </div>
                                        <div class="col-xs-6">
                                            <p class="time_details">
                                                @if (core.IntendedEndTime != null)
                                                {
                                                    <!-- Appropriate date and time for display are computed here. -->
                                                    DateTime eta = (DateTime)core.IntendedEndTime;
                                                    DayOfWeek today = DateTime.Now.DayOfWeek;
                                                    int days = today - DayOfWeek.Monday;
                                                    DateTime startOfWeek = DateTime.Now.AddDays(-days);
                                                    DateTime endOfWeek = startOfWeek.AddDays(6);
                                                    DateTime now = DateTime.Now;
                                                    
                                                    if ((DateTime.Now.DayOfWeek == eta.DayOfWeek) && (DateTime.Now.Day == eta.Day) && (DateTime.Now.Year == eta.Year))
                                                    {
                                                        <!-- The return date is today -->
                                                        if (now > eta)
                                                        {
                                                            <small class="out_of_time">Today<br /> @eta.ToShortTimeString()</small>
                                                        }
                                                        else
                                                        {
                                                            <small>Today<br /> @eta.ToShortTimeString()</small>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <!-- The return date is some other day. -->
                                                        
                                                        if (eta < endOfWeek)
                                                        {
                                                            if (now > eta)
                                                            {
                                                                <small class="out_of_time">@eta.DayOfWeek<br /> @eta.ToShortTimeString()</small>
                                                            }
                                                            else
                                                            {
                                                                <small>@eta.DayOfWeek<br /> @eta.ToShortTimeString()</small>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            if (now > eta)
                                                            {
                                                                <small class="out_of_time">@eta.ToShortDateString()<br /> @eta.ToShortTimeString()</small>
                                                            }
                                                            else
                                                            {
                                                                <small>@eta.ToShortDateString()<br /> @eta.ToShortTimeString()</small>
                                                            }
                                                        }                                                        
                                                    }       
                                                }
                                            </p>
                                        </div>
                                    </div>
                                    
                                    
                                </div>
                                <div class="panel-body default-cursur">
                                    <div class="container-switch">
                                        <p>
                                        @if (core.Status.Available == true)
                                        {
                                            <input type="checkbox" name="staff-state" value="@core.UserID" checked data-on-color="abacusbio" data-off-color="warning" data-on-text="In" data-off-text="Out">
                                        }
                                        else
                                        {
                                            <input type="checkbox" name="staff-state" value="@core.UserID" data-on-color="abacusbio" data-off-color="warning" data-off-text="Out" data-on-text="In">
                                        }
                                        </p>
                                    </div>
                                    <input id="userID" type="hidden" value="@core.UserID" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>  
    </div>
        
    <div class="row">
        <div class="container">

        <!-- Modal -->
            <div class="modal fade" id="myModal" role="dialog" data-backdrop="static">
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div id="main-modal-header" class="modal-header" style="padding:35px 50px;">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 id="modal-title"></h4>
                        </div>
                        <!-- Modal Content -->
                        <div class="modal-body" style="padding:40px 50px;">
                            <form id="form-update-status-or-location" action="/Home/SubmitStatusOrLocationUpdate" method="post" role="form">
                                <div class="form-group container-fluid">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <label for="status-list"><span class="glyphicon glyphicon-user"></span> Status</label>
                                            <br />
                                            <!-- Status Dropdown -->
                                            <select id="status-list" class="form-control" name="statusID">
                                                <!-- Statuses go here. -->
                                            </select>
                                        </div>

                                        <div class="col-xs-6">
                                            <label for="location-list"><span class="glyphicon glyphicon-map-marker"></span> Location</label>
                                            <br />
                                            <!-- Location Dropdown -->
                                            <select id="location-list" class="form-control" name="locationID">
                                                <!-- Locations go here. -->
                                            </select>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-xs-8" id="time_display">
                                            <label for="time_slider">
                                                Return 
                                                <span class="glyphicon glyphicon-calendar"> </span>
                                                <span class="glyphicon glyphicon-time"> </span> 
                                                <span id="date_picker_val"> </span>
                                                <span id="time_slider_val"> </span>
                                            </label>
                                        </div>
                                        <div class="col-xs-4">
                                            <button id="cancel_time" class="btn btn-default form-control">
                                                <span class="glyphicon glyphicon-calendar"> </span>
                                                <span class="glyphicon glyphicon-time"> </span> Cancel
                                            </button>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <!-- Datepicker goes here. -->
                                        <div class="col-xs-1">
                                            <p><font size="6"><span class="glyphicon glyphicon-calendar"></span></font></p>
                                        </div>
                                        <div class="col-xs-11">
                                            <input type="text" class="form-control" placeholder="touch here..." id="datepicker" name="returnDate" />
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <!-- Time slider goes here. -->
                                        <div class="col-xs-1">
                                            <p><font size="6"><span class="glyphicon glyphicon-time"></span></font></p>
                                        </div>
                                        <div class="col-xs-11">

                                                <div id="time_slider" class="slider">
                                                    <div class="track" id="custom_track"></div>
                                                    <div class="knob"></div>
                                                </div>

                                            <!-- Hidden field for datetime information -->
                                            <input type="hidden" id="time_value" name="returnTime" value=""/>
                                        </div>
                                    </div>
                                    <br />
                                </div>

                                <button id="update-singular-user-state" type="submit" class="btn btn-info btn-block"><span class="glyphicon glyphicon-floppy-disk"></span> Save & Update</button>
                            </form>
                        </div>
                        <!-- Modal Footer -->
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        <!-- /modal -->
     </div>
    </div>
    <!-- /row -->
</body>
</html>