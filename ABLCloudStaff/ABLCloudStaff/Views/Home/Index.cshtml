@model List<ABLCloudStaff.Models.Core>

@{
    ViewBag.Title = "CloudStaff";
    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="../../Content/Site.css">
    <link rel="stylesheet" href="../../Content/bootstrap-switch.css">
    <script src="../../Scripts/bootstrap-switch.min.js"></script>

    <title>CloudStaff</title>
    <script>
        $(document).ready(function () {
            // Launch modal when a module is clicked
            $(".staff-modules").click(function (e) {
                $("#myModal").modal();
            });

            $('#myModal').on('shown.bs.modal', function (e) {
                // Get the name of the selected user
                invoker = $(e.relatedTarget);
                this_user = $invoker.find("staff-name-text").text();
                console.log(this_user);

                $("#modal-title").text(this_user);
            });

            // Init toggle switches
            $("[name='staff-state']").bootstrapSwitch();
        });
    </script>
</head>
<body>
    <!-- Navigation Bar-->
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("CloudStaff", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Status Board", "Index", "Home")</li>
                    <li>@Html.ActionLink("Create Group", "About", "Home")</li>
                    <li>@Html.ActionLink("Administration", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <br />
    <div class="row">

        @foreach(var core in @Model)
        {
            <div class="col-md-2">
                <div class="container-fluid">
                    <div class="panel-group staff-modules">
                        <a class="user-id" hidden="hidden" href="#">@core.UserID</a>
                        <div class="panel-default panel">
                            <div class="panel-heading staff-name">
                                <p class="staff-name-text">@core.User.FirstName @core.User.LastName</p>
                            </div>
                            <div class="panel-body">
                                <div class="container-switch">
                                    <p>
                                    @if (core.Status.Name == "In Office")
                                    {
                                        <input type="checkbox" name="staff-state" disabled="true" checked data-on-color="success" data-off-color="warning" data-on-text="In" data-off-text="Out">
                                    }
                                    else
                                    {
                                        <input type="checkbox" name="staff-state" disabled="true" data-on-color="success" data-off-color="warning" data-off-text="Out" data-on-text="In">
                                    }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>      
    <div class="row">
        <div class="container">

        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header" style="padding:35px 50px;">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 id="modal-title">Status</h4>
                    </div>
                    <div class="modal-body" style="padding:40px 50px;">
                        <form role="form">
                            <div class="form-group">
                                <label for="usrname"><span class="glyphicon glyphicon-user"></span> Username</label>
                                <input type="text" class="form-control" id="usrname" placeholder="Enter email">
                            </div>
                            <div class="form-group">
                                <label for="psw"><span class="glyphicon glyphicon-eye-open"></span> Password</label>
                                <input type="text" class="form-control" id="psw" placeholder="Enter password">
                            </div>
                            <div class="checkbox">
                                <label><input type="checkbox" value="" checked>Remember me</label>
                            </div>
                            <button type="submit" class="btn btn-success btn-block"><span class="glyphicon glyphicon-off"></span> Login</button>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
                        <p>Not a member? <a href="#">Sign Up</a></p>
                        <p>Forgot <a href="#">Password?</a></p>
                    </div>
                </div>

            </div>
        </div>
     </div>
    </div>
</body>
</html>