        <div class="container">
            <!-- See group members modal -->
            <div class="modal fade" id="see_group_members_modal" role="dialog" data-backdrop="static">
                <div class="modal-dialog">
                    <!-- Modal content -->
                    <div class="modal-content">
                        <div id="main-modal-header" class="modal-header" style="padding:35px 50px;">
